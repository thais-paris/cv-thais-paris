<%= simple_form_for @experience do |f| %>

  <div class="form-inputs">
    <%= f.input :post, placeholder: "Post" %>
    <%= f.input :entreprise, placeholder: "Entreprise" %>
    <%= f.input :date, placeholder: "Date" %>
    <%= f.input :description, placeholder: "Description" %>
  </div>

  <div class="form-actions w-100 d-flex justify-content-end">
    <%= f.submit "Enregistrer mon experience", class: "btn btn-ghost" %>
  </div>

<% end %>
