<div class="container fullheight mt-4 p-5">
  <div class="row">
    <div class="col-12 col-sm-10 col-lg-8 col-xl-6 m-auto">

      <h2>Cette page n'est pas destinée au visiteur !</h2>
      <h6>Elle me pertmet d'éditer mon cv rapidement en ligne sans devoir modifier le code </h6>


      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
        </div>

        <div class="form-actions d-flex justify-content-end">
          <%= f.button :submit, "Connexion", class: 'btn btn-ghost' %>
        </div>
      <% end %>
    </div>
  </div>
</div>


